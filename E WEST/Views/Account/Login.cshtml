@model E_WEST.ViewModels.LoginViewModel

@{
	ViewData["Title"] = "Вход в систему";
	Layout = "_AuthLayout";
}

<h1>Вход в систему</h1>
<form asp-action="Login" method="post" class="login-form">
	<div class="form-group">
		<input asp-for="Email" class="form-control" placeholder="логин" />
		<span asp-validation-for="Email" class="text-danger"></span>
	</div>
	<div class="form-group">
		<input asp-for="Password" type="password" class="form-control" placeholder="пароль" />
		<span asp-validation-for="Password" class="text-danger"></span>
	</div>
	<button type="submit" class="btn btn-primary btn-block">войти</button>
</form>

<div class="auth-links">
	<a href="#">Забыли пароль?</a>
	<a asp-action="Register">Нет аккаунта? Зарегистрироваться</a>
</div>